@model IEnumerable<EventViewModel>

@{
    ViewData["Title"] = "All Events";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalTickets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerTicket)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalTickets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerTicket)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
            <td>
                @if (this.User.Identity.Name == item.Owner)
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    <span>|</span>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                }
            </td>
        </tr>
    }
    </tbody>
</table>
